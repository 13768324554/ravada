[Unit]
Description=Web Ravada
Requires=network.target
After=network.target
# put here other service requirements

[Service]
Type=simple
RemainAfterExit=yes
SyslogIdentifier=rvd_front
PIDFile=/var/run/ravada/hypnotoad.pid
WorkingDirectory=/var/www/ravada/
ExecStart=/usr/bin/hypnotoad /usr/sbin/rvd_front.pl -f
ExecStop=/usr/bin/hypnotoad -s /usr/sbin/rvd_front.pl
ExecReload=/usr/bin/hypnotoad /usr/sbin/rvd_front.pl
User=ravada

[Install]
WantedBy=multi-user.target
Alias=rvd_front.service

