<!DOCTYPE html>
<html ng-app="ravada.app">
%= include 'bootstrap/header'
<body>
	<div id="wrapper">
		<div id="page-wrapper">
			<h2><%=l 'Configuration' %></h2>
			<form action="<%= $action %>">
				<div class="row"><div class="col-md-4">
					<%=l 'hypnotoad' %> - pid-file:
				</div>
				<div class="col-md-8">
					<input type="text" name="pid-file" value="<%= $pid_file %>">
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'hypnotoad' %> - listen:
				</div>
				<div class="col-md-8">
					<input type="text" name="listen" value="<%= $listen %>">
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'dir' %> - templates:
				</div>
				<div class="col-md-8">
					<input type="text" name="templates" value="<%= $templates %>">
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'dir' %> - public:
				</div>
				<div class="col-md-8">
					<input type="text" name="public" value="<%= $public %>">
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'admin' %> - hide-clones:
				</div>
				<div class="col-md-8">
					<input type="number" min="0" name="hide-clones" value="<%= $hide_clones %>">
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'admin' %> - auto-start:
				</div>
				<div class="col-md-8">
					<input type="checkbox" name="autostar" 
					% if ($autostart){
						checked
					% }
					>
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'user' %>:
				</div>
				<div class="col-md-8">
					<input type="text" name="user" value="<%= $user %>">
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'group' %>:
				</div>
				<div class="col-md-8">
					<input type="text" name="group" value="<%= $group %>">
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'secrets' %>:
				</div>
				<div class="col-md-8">
					<input type="text" name="secrets" value="<%= $secrets %>" placeholder="['changeme1','changeme2']">
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'login custom' %>:
				</div>
				<div class="col-md-8">
					<input type="text" name="login-custom" value="<%= $login_custom %>">
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'footer' %>:
				</div>
				<div class="col-md-8">
					<input type="text" name="footer" value="<%= $footer %>">
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'login background file' %>:
				</div>
				<div class="col-md-8">
					<input type="text" name="login-background-file" value="<%= $login_bg_file %>">
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'login message' %>:
				</div>
				<div class="col-md-8">
					<input type="text" name="login-message" value="<%= $login_message %>">
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'monitoring' %>:
				</div>
				<div class="col-md-8">
					<input type="text" name="monitoring" value="<%= $monitoring %>">
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'guide' %>:
				</div>
				<div class="col-md-8">
					<input type="text" name="guide" value="<%= $guide %>">
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'guide custom' %>:
				</div>
				<div class="col-md-8">
					<input type="text" name="guide-custom" value="<%= $guide_custom %>">
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'session timeout' %>:
				</div>
				<div class="col-md-8">
					<input type="text" name="session-timeout" value="<%= $session_timeout %>">
				</div></div>
				<div class="row"><div class="col-md-4">
					<%=l 'session timeout admin' %>:
				</div>
				<div class="col-md-8">
					<input type="text" name="session-timeout-admin" value="<%= $session_timeout_admin %>">
				</div></div>
				<input type="submit" name="submitbtn">
			</form>
		</div>
	</div>
    %= include 'bootstrap/scripts'
    %= include 'bootstrap/messages'
</body>
</html>