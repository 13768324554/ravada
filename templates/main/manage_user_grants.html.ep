<form>
% for my $perm ($_user->list_all_permissions) {
%     my $checked = '';
%     $checked = 'checked' if $user->can_do($perm->{name});
      <input type="checkbox" <%= $checked %> 
                    name="perm_<%= $perm->{id} %>">
      <label for="perm_<%= $perm->{id} %>"><%=l($perm->{description}) %></label><br/>
% }
    <input type="submit">
</form>

