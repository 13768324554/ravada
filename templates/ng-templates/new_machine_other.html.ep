<div class="tab-pane fade" id="frommachine" >
    <form method="post" action="/machine/copy">
        <div class="panel-body">
            <div class="row">
                <form class="form-inline" method="post" action="/machine/copy" ng-controller="new_machine">
                    <div class="form-group row">
                        <input class="form-control" type="hidden" name="id_base" value="{{list_machines.id}}">
                        <label for="list_machines" class="col-lg-2 control-label"><%=l 'Source Machine' %></label>
                        <div class="col-lg-10">
                            <select class="form-control"
                                name ="list_machines"
                                ng-model="list_machines"
                                ng-options="item.name for item in base track by item.id"
                                required=""
                            ></select>
                        </div>
                    </div>
                    <div ng_show="list_machines">
                        <div class="form-group row">
                            <div class="col-lg-2">
                            <h5><strong><%=l 'Destination Machine' %></strong></h5>
                          </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-2">
                                <label class="col-lg-12 text-muted" for="copy_name_{{list_machines.id}}"><%=l 'Name' %>:</label>
                            </div>
                            <div class="col-lg-10">
                                <input class="form-control" name="copy_name_{{list_machines.id}}" type="text" size="40"
                                value="{{list_machines.name}}-copy">
                                <!-- todo check unique name -->
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-lg-2">
                                <label class="col-lg-12 text-muted" for="copy_ram">RAM (Gb):</label>
                            </div>
                            <div class="col-lg-2">
                                <input class="form-control" ng-model="ramsize" type="number" name="copy_ram"
                                min="1" max="4" required="">
                            </div>
                        </div>
                   
                        <div class="form-group row alert alert-warning"
                            ng-hide="list_machines.is_base || !list_machines">
                            The source machine is not a base. It must be
                            prepared before it can be copied. This
                            process may take some minutes.
                        </div>
                        <div class="form-group row">
                            <input type="submit" class="btn btn-default">
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <!-- Description -->
            </div>
        </div>
    </form>
</div>
