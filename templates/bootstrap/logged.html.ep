
<!DOCTYPE html>
<html>
%= include 'bootstrap/header'

<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">

<div id="wrapper">
    %= include 'bootstrap/navigation'
    <div id="page-wrapper">

        <!--MACHINES SELECTION-->
        <div class="page-header">
        <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                     <h2>Welcome to SPICE! Choose a Machine to Start</h2>
                </div>
                <div class="panel-body">
                    <form method="post" id="runform">
%                      if (keys %$base) {
%                          for my $option (sort keys %$base) {
            
                                <div class="col-sm-4">
                                <div class="panel panel-success machine">
                                        <div class="panel-heading">
                                            <h3 class="panel-title"><%= $base->{$option} %></h3><br>
                                            <img id="screensh" src="/img/screenshot.jpg">
                                        </div>
                                        <div class="btn-group pannel-body" data-toggle="buttons">
                                          <label class="btn btn-success" id="base_action">
                                            <input name="id_base" id="submit" type="radio" value="<%= $option %>" onchange="submitForm()"><strong>&nbsp;<i class="fa fa-play" aria-hidden="true"></i>&nbsp;Start this Machine</strong>
                                          </label>
                                          <label class="btn btn-warning" id="base_action">
                                            <input name="id_base" type="radio" value="">&nbsp;<i class="fa fa-pause" aria-hidden="true"></i>&nbsp;Pause this Machine
                                          </label>
                                          <label class="btn btn-danger" id="base_action">
                                            <input name="id_base" type="radio" value="">&nbsp;<i class="fa fa-power-off" aria-hidden="true"></i>&nbsp;Shutdown this Machine
                                          </label>
                                        </div>
                                </div>
                                </div>
%                          }
                        
%                      } else {
                            <div class="alert alert-danger">
                                <strong>Error</strong>  No base domains available.
                            </div>
%                      }
                            <div class="col-sm-12" style="display:none">
                                <input type="submit" name="submit" id="submitthis">
                            </div>
                        
                    </form>
%                   if (scalar @$error) {
                            <ul>
%                         for my $i (@$error) {
                                <li><%= $i %></li>
%                         }
                            </ul>
%                   }
                </div>
            </div>

        </div>
        </div>    
        </div>
        <!--/row-->

        <!--SUPPORT CONTACT-->
        <div class="page-header">
        <div class="row">
        <div class="col-lg-12">

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h2>Support Contact</h2>
                    <p>If you have any issue, you can contact the Suport crew and we will try to help you. Please, only contact Support Center if it is strictly necessary.</p>
                </div>

                <div class="panel-footer">
    
                    <form role="form">
                        <div class="form-group">
                            <label>Name</label>
                            <input class="form-control" placeholder="John Doe">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control" placeholder="john.doe@example.com">
                        </div>
                        <div class="form-group">
                            <label>Phone Number</label>
                            <input class="form-control" placeholder="+34666666666">
                        </div>
                        <div class="form-group">
                            <label>Description:</label>
                            <textarea class="form-control" rows="5"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Attachment</label>
                            <input type="file">
                        </div>
                        <div class="form-group">
                            <label>Contact Method:</label>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" value="">Phone
                                </label>

                                <label>
                                    <input type="checkbox" value="">Email
                                </label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>

                </div>
            </div>
            
        </div>
        </div>
        </div>       
        <!--/row-->        
    </div>
    %= include 'bootstrap/scripts'


</div>

</body>

</html>
