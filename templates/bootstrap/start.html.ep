
<!DOCTYPE html>
<html>
%= include 'bootstrap/inheader'
<body role="document">
    %= include 'bootstrap/innavigation'
     <header id="page-top" class="intro">
        <div class="intro-body">
            <div class="container">
                <form class="form-singin" method="post">
                <h2 class="form-signin-heading">Login</h2>

                <input class="form-control" id="user" name="login" value ="<%= $login %>" type="text" placeholder="User/Email">

                <input class="form-control" id="pssw" type="password" name="password" value="" placeholder="Password">
        
               <!-- <input type="submit" name="submit" value="launch"> -->
                <button id="submit" class="btn btn-lg btn-success btn-block" href="/" type="submit" name="submit" value="launch">Launch</button>
                % if (scalar @$error) {
                        
                %       for my $i (@$error) {
                            <div class="alert alert-danger">
                                <strong>Error: </strong><%= $i %>
                            </div>    
                %       }
                        
                % }
                </form>
                <a href="#instruccions" class="btn btn-circle page-scroll">
                            <i class="fa fa-angle-double-down animated"></i>
                </a>
            </div>
        </div>
    </header>

    <!-- Instruccions -->
    <section id="instruccions" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>Section 1</h2>
                <p>Section content</p>
            </div>
        </div>
    </section>

    <!-- Tecnologies -->
    <section id="tecnologies" class="content-section text-center">
        <div class="download-section">
            <div class="container">
                <div class="col-lg-8 col-lg-offset-2">
                    <h2>Section 2</h2>
                    <p>Section content</p>
                    <a href="#" class="btn btn-default btn-lg">Usable button</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Contacte -->
    <section id="contacte" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>Section 3</h2>
                <p>Section content</p>
            </div>
        </div>
    </section>



    <!-- Footer -->
    <footer>
        <div class="container text-center">
            <p>Footer text</p>
        </div>
    </footer>

     
    %= include 'bootstrap/inscripts'
</body>
</html>
